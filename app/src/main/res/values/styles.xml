<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="ToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextColor">@color/color_text</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ButtonIconStyle" parent="Widget.Material3.Button.IconButton">
        <item name="iconSize">32dp</item>
        <item name="iconPadding">0dp</item>
        <item name="iconTint">@null</item>
        <item name="android:padding">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="ButtonTextStyle" parent="Widget.Material3.Button.TextButton">
        <item name="iconSize">20dp</item>
        <item name="iconPadding">6dp</item>
        <item name="iconTint">@null</item>
        <item name="android:padding">0dp</item>
        <item name="android:textColor">@color/color_text</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="TextStyle">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextStyle.Medium" parent="TextStyle">
        <item name="android:fontWeight" tools:targetApi="o">500</item>
    </style>

    <style name="TextStyle.Bold" parent="TextStyle">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text13Style">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Text13Style.Medium" parent="Text13Style">
        <item name="android:fontWeight" tools:targetApi="o">500</item>
    </style>

    <style name="Text13Style.Light" parent="Text13Style">
        <item name="android:fontWeight" tools:targetApi="o">300</item>
    </style>

    <style name="Text15Style">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Text15Style.Bold" parent="Text15Style">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text16Style">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text16Style.Medium" parent="Text16Style">
        <item name="android:fontWeight" tools:targetApi="o">500</item>
    </style>

    <style name="Text16Style.Bold" parent="Text16Style">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text16Style.Light" parent="Text16Style">
        <item name="android:fontWeight" tools:targetApi="o">300</item>>
    </style>

    <style name="Text18Style">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text18Style.Medium" parent="Text18Style">
        <item name="android:fontWeight" tools:targetApi="o">500</item>
    </style>

    <style name="Text20Style">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Text20Style.Bold" parent="Text20Style">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text20Style.Light" parent="Text20Style">
        <item name="android:fontWeight" tools:targetApi="o">300</item>
    </style>

    <style name="Text22Style">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Text22Style.Bold" parent="Text22Style">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text24Style">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Text24Style.Bold" parent="Text24Style">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text28Style">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="Text28Style.Bold" parent="Text28Style">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonPrimaryDisableStyle" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/color_selector_primary_disable_button</item>
        <item name="cornerRadius">4dp</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">14dp</item>
        <item name="android:textColor">@color/color_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ButtonPrimaryStyle" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/color_selector_primary_button</item>
        <item name="cornerRadius">4dp</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">14dp</item>
        <item name="android:textColor">@color/color_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ButtonStrokePrimaryStyle" parent="ButtonPrimaryStyle">
        <item name="backgroundTint">@color/transparent</item>
        <item name="strokeColor">@color/color_primary</item>
        <item name="strokeWidth">3dp</item>
        <item name="android:textColor">@color/color_primary</item>
    </style>

    <style name="CountStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingHorizontal">4dp</item>
        <item name="android:paddingVertical">2dp</item>
        <item name="android:background">@drawable/bg_count</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="EdittextStyle" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxBackgroundMode">filled</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="android:textColor">@color/color_text_invert</item>
        <item name="hintTextColor">@color/color_text_invert</item>
        <item name="cornerFamily">rounded</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/item_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/item_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/item_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/item_radius</item>
    </style>

</resources>